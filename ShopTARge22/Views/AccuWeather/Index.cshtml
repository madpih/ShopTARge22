@model ShopTARge22.Models.AccuWeather.SearchCityViewModel


    <h1>
        Search City
    </h1>

    <form method="post">
         <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the forecast in a city</h2>
                <label asp-for="CityName" style="font-family: Arial"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
          </div>
     
            <div class="form-group col-md-offsett col-md-5 my-2">
                <button asp-controller="accuWeather" asp-action="searchCity" class="btn btn-primary">Search</button>
            </div>
    </form>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/assets/js/jquery.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/browser.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/breakpoints.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/util.js" asp-append-version="true"></script>
    <script src="~/assets/js/main.js" asp-append-version="true"></script>
   
}
