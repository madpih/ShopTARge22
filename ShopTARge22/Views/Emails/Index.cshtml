@model ShopTARge22.Models.Emails.EmailViewModel

<h1>
    Send email
</h1>


    <form method="post">
           
        <div class="form-group row">
            <label asp-for="To" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="To" class="form-control" />
            </div>
        </div>


        <div class="form-group row">
            <label asp-for="Subject" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Subject" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Body" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Body" class="form-control" />
            </div>
        </div>

        
            <div class="form-group col-md-offsett cpl-md-5 my-2">
                <button asp-controller="Emails" asp-action="sendEmail" class="btn btn-primary" type="submit">Send email</button>
            </div>
       

    </form>

   

