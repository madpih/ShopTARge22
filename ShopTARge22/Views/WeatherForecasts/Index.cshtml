@model ShopTARge22.Models.Forecast.SearchCityViewModel

<h1>
    Search City
</h1>

    <form method="post">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the forecast in a city</h2>
                <label asp-for="CityName" style="font-family: Arial"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>

            <div class="form-group col-md-offsett cpl-md-5 my-2">
                <button asp-controller="weatherForecasts" asp-action="searchCity" class="btn btn-primary">Search</button>
            </div>
    </form>

